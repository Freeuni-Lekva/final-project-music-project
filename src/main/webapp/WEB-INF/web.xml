<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>register-servlet</servlet-name>
        <servlet-class>org.freeuni.musicforum.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login-servlet</servlet-name>
        <servlet-class>org.freeuni.musicforum.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>profile-albums-servlet</servlet-name>
        <servlet-class>org.freeuni.musicforum.controller.ProfileAlbumsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>profile-reviews-servlet</servlet-name>
        <servlet-class>org.freeuni.musicforum.controller.ProfileReviewsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>add-album-servlet</servlet-name>
        <servlet-class>org.freeuni.musicforum.controller.AddAlbumServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>add-songs-servlet</servlet-name>
        <servlet-class>org.freeuni.musicforum.controller.AddSongsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>add-friend-servlet</servlet-name>
        <servlet-class>org.freeuni.musicforum.controller.AddFriendServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>register-servlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login-servlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profile-albums-servlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profile-reviews-servlet</servlet-name>
        <url-pattern>/profile_reviews</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>add-album-servlet</servlet-name>
        <url-pattern>/addAlbum</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>add-songs-servlet</servlet-name>
        <url-pattern>/addSongs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>add-friend-servlet</servlet-name>
        <url-pattern>/addFriend</url-pattern>
    </servlet-mapping>

</web-app>